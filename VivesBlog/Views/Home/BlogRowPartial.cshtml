@model Article

<tr>
	<td>@Model.Title</td>
	<td>@Model.Author.Name1 @Model.Author.Name2</td>
	<td>@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
	<td>
		<a class="btn btn-light" asp-action="BlogEdit" asp-route-id="@Model.Key">Edit</a>
		<a class="btn btn-danger" asp-action="BlogDelete" asp-route-id="@Model.Key">Delete</a>
	</td>
</tr>