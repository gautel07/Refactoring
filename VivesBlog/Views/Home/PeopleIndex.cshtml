
@model IList<Person>
@{
	ViewData["Title"] = "Manage people";
}

<h1>@ViewData["Title"]</h1>

<a class="btn btn-primary" asp-action="PeopleCreate">New Person</a>

<table class="table table-striped">
	<thead>
	<tr>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Actions</th>
	</tr>
	</thead>
	<tbody>
	@foreach (var person in Model)
	{
		<partial name="PeopleRowPartial" model="person"/>
	}
	</tbody>
</table>
